<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Booking System</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>

    <!-- 🔵 Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                ✈ Booking System
            </a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Aircraft" asp-action="Index">
                            Aircraft
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Airport" asp-action="Index">
                            Airports
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Flight" asp-action="Index">
                            Flights
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Booking" asp-action="Index">
                            Bookings
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- 🔵 Main Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- 🔵 Footer -->
    <footer class="text-center mt-5 mb-3 text-muted">
        <hr />
        <p>© @DateTime.Now.Year - My Airline Booking System</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
