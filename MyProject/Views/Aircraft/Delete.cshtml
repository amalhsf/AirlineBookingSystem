@model MyProject.Domain.Aircrafts.Aircraft

@{
    ViewData["Title"] = "Delete Aircraft";
}

<h2>Delete Aircraft</h2>

<div class="card shadow-sm p-4">
    <p class="text-danger fw-bold">
        Are you sure you want to delete this aircraft?
    </p>

    <div class="mb-3">
        <strong>Model:</strong> @Model.Model <br />
        <strong>Total Seats:</strong> @Model.TotalSeats
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
