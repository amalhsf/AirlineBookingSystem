@model MyProject.Domain.Airports.Airport

@{
    ViewData["Title"] = "Delete Airport";
}

<h2>Delete Airport</h2>

<div class="card shadow-sm p-4">

    <p class="text-danger fw-bold">
        Are you sure you want to delete this airport?
    </p>

    <div class="mb-3">
        <strong>Name:</strong> @Model.Name <br />
        <strong>City:</strong> @Model.City <br />
        <strong>Country:</strong> @Model.Country <br />
        <strong>Code:</strong> @Model.Code
    </div>

    <form asp-action="DeleteConfirmed" method="post">

        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>

    </form>

</div>
